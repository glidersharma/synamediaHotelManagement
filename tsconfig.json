{
    "compilerOptions": {
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "outDir": "./dist",
      "resolveJsonModule": true,
      "rootDir": "./src",
      "skipLibCheck": true,
      "strict": true,
      "target": "es6"
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules"]
  }
  